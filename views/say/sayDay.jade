          h6.proDayText &nbsp;
          h6.proDayText.sun #{__('githubSun')}
          h6.proDayText &nbsp;
          h6.proDayText &nbsp;
          h6.proDayText #{__('githubWeb')}
          h6.proDayText &nbsp;
          h6.proDayText &nbsp;
          h6.proDayText.sat #{__('githubSat')}
        .proYearWrap
          each _, k in Array(12)
            - if ( k == 0 ) {var monthTxt = __('githubJan'); }
            - if ( k == 1 ) {var monthTxt = __('githubFeb'); }
            - if ( k == 2 ) {var monthTxt = __('githubMar'); }
            - if ( k == 3 ) {var monthTxt = __('githubApr'); }
            - if ( k == 4 ) {var monthTxt = __('githubMay'); }
            - if ( k == 5 ) {var monthTxt = __('githubJun'); }
            - if ( k == 6 ) {var monthTxt = __('githubJul'); }
            - if ( k == 7 ) {var monthTxt = __('githubAug'); }
            - if ( k == 8 ) {var monthTxt = __('githubSep'); }
            - if ( k == 9 ) {var monthTxt = __('githubOct'); }
            - if ( k == 10) {var monthTxt = __('githubNov'); }
            - if ( k == 11) {var monthTxt = __('githubDec'); }
            .proMonth
              h6.proMonthText #{monthTxt}
              .proWeekWrap

                - var day1 = new Date ( thisYear, k, 1 ); // 해당 달에 1일. 왜 여기는 k+1이 안된까.
                - var day = day1.getDay(); // 요일을 구한다.
                - var dayCount = new Date ( thisYear, k+1, 0 ).getDate(); // 해당 달의 일 수 구하기
                - var weeks;
                - // 그해 주가 몇개인지 결정
                - if ( day <= 4 ) weeks = 4; // 만약 일, 월, 화, 수요일이라면
                - else if ( day == 4 ) { // 만약 목요일 이라면
                -   if ( dayCount % 7 <=2 ) weeks = 4;
                -   else weeks = 5;
                - } else if ( day == 5 ) { // 만약 금요일이라면
                -   if ( dayCount % 7 <= 1 ) weeks = 4;
                -   else weeks = 5;
                - } else if (day == 6 ) { // 만약 토요일이라면
                -   if ( dayCount % 7 <= 0 ) weeks = 4;
                -   else weeks = 5;
                - }
                - if ( k == 11 ) weeks = 6 // 그런데 만약 12월이면 31일까지니 6주


                - // 첫달의 첫주. 빈 공간 그리기
                - if ( totalCount == 0){
                  .proWeekFirstMonth
                    - if ( day == 0 ){ // 1월 달의 시작이 일요일이라면
                    - } else if ( day == 1 ){ // 월
                      .thereIsNoDay_Mon
                    - } else if ( day == 2 ){ // 화
                      .thereIsNoDay_Tue
                    - } else if ( day == 3 ){ // 수
                      .thereIsNoDay_Wed
                    - } else if ( day == 4 ){ // 목
                      .thereIsNoDay_Thu
                    - } else if ( day == 5 ){ // 금
                      .thereIsNoDay_Fri
                    - } else if ( day == 6 ){ // 토
                      .thereIsNoDay_Sat
                    - }

                    - // 첫달 첫주 1일부터 토요일까지 셀 그리고 카운트에 맞게 색칠하기
                    - for ( var very_i= 0; very_i < 7 - day ; very_i++){
                      - totalCount++;
                      - if (cell[totalCount].count == 1){
                      a(href = '/#{userNickname}/day/#{cell[totalCount].date}' data-placement="right" title="#{cell[totalCount].count+__('githubTooltip')}").tooltipUp.proDay1 #{cell[totalCount].count}
                      - } else if (cell[ totalCount ].count == 2) {
                      a(href = '/#{userNickname}/day/#{cell[totalCount].date}' data-placement="right" title="#{cell[totalCount].count+__('githubTooltip')}").tooltipUp.proDay2 #{cell[totalCount].count}
                      - } else if (cell[ totalCount ].count == 3) {
                      a(href = '/#{userNickname}/day/#{cell[totalCount].date}' data-placement="right" title="#{cell[totalCount].count+__('githubTooltip')}").tooltipUp.proDay3 #{cell[totalCount].count}
                      - } else if (cell[ totalCount ].count == 4) {
                      a(href = '/#{userNickname}/day/#{cell[totalCount].date}' data-placement="right" title="#{cell[totalCount].count+__('githubTooltip')}").tooltipUp.proDay4 #{cell[totalCount].count}
                      - } else if (cell[ totalCount ].count == 5) {
                      a(href = '/#{userNickname}/day/#{cell[totalCount].date}' data-placement="right" title="#{cell[totalCount].count+__('githubTooltip')}").tooltipUp.proDay5 #{cell[totalCount].count}
                      - } else if (cell[ totalCount ].count == 6) {
                      a(href = '/#{userNickname}/day/#{cell[totalCount].date}' data-placement="right" title="#{cell[totalCount].count+__('githubTooltip')}").tooltipUp.proDay6 #{cell[totalCount].count}
                      - } else if (cell[ totalCount ].count == 7) {
                      a(href = '/#{userNickname}/day/#{cell[totalCount].date}' data-placement="right" title="#{cell[totalCount].count+__('githubTooltip')}").tooltipUp.proDay7 #{cell[totalCount].count}
                      - } else if (cell[ totalCount ].count == 8) {
                      a(href = '/#{userNickname}/day/#{cell[totalCount].date}' data-placement="right" title="#{cell[totalCount].count+__('githubTooltip')}").tooltipUp.proDay8 #{cell[totalCount].count}
                      - } else if (cell[ totalCount ].count == 9) {
                      a(href = '/#{userNickname}/day/#{cell[totalCount].date}' data-placement="right" title="#{cell[totalCount].count+__('githubTooltip')}").tooltipUp.proDay9 #{cell[totalCount].count}
                      - } else if (cell[ totalCount ].count >= 10) {
                      a(href = '/#{userNickname}/day/#{cell[totalCount].date}' data-placement="right" title="#{cell[totalCount].count+__('githubTooltip')}").tooltipUp.proDay10 #{cell[totalCount].count}
                      - } else {
                      .proDayNone #{cell[totalCount].count}
                      - }
                    - }
                  - }

                - // 나머지 빈 셀을 주단위로 그린다.
                each _, j in Array(weeks)
                  .proWeek
                    each _, i in Array(7)
                      - totalCount++;
                      - // 오늘 주색을 회색으로 바꾼다
                      - if (todayIdx < totalCount) { // 오늘 이후부터(내일부터)
                        - if ( todayIdx + 1 == totalCount ) { // 다만 내일일 경우만
                          - var todayDay = new Date().getDay();
                            - if ( todayDay == 0 ) { // 일요일일 경우
                              .proWeek0
                            - } else if ( todayDay == 1) { // 월
                              .proWeek1
                            - } else if ( todayDay == 2) { // 화
                              .proWeek2
                            - } else if ( todayDay == 3) { // 수
                              .proWeek3
                            - } else if ( todayDay == 4) { // 목
                              .proWeek4
                            - } else if ( todayDay == 5) { // 금
                              .proWeek5
                            - } else if ( todayDay == 6) { // 토
                              .proWeek6
                            - }
                        - } else { // 아직 오지 않은 proWeek6으로 바꾼다
                          .proWeek6
                        - }
                      -   break;
                      - }

                      - // 전체 셀을 돌며 카운트에 맞게 색을 칠한다
                      - if(cell[totalCount]) {                      
                      - if (cell[totalCount].count == 1){
                      a(href = '/#{userNickname}/day/#{cell[totalCount].date}' data-placement="left" title="#{cell[totalCount].count+__('githubTooltip')}").tooltipUp.proDay1 #{cell[totalCount].count}
                      - } else if (cell[ totalCount ].count == 2) {
                      a(href = '/#{userNickname}/day/#{cell[totalCount].date}' data-placement="left" title="#{cell[totalCount].count+__('githubTooltip')}").tooltipUp.proDay2 #{cell[totalCount].count}
                      - } else if (cell[ totalCount ].count == 3) {
                      a(href = '/#{userNickname}/day/#{cell[totalCount].date}' data-placement="left" title="#{cell[totalCount].count+__('githubTooltip')}").tooltipUp.proDay3 #{cell[totalCount].count}
                      - } else if (cell[ totalCount ].count == 4) {
                      a(href = '/#{userNickname}/day/#{cell[totalCount].date}' data-placement="left" title="#{cell[totalCount].count+__('githubTooltip')}").tooltipUp.proDay4 #{cell[totalCount].count}
                      - } else if (cell[ totalCount ].count == 5) {
                      a(href = '/#{userNickname}/day/#{cell[totalCount].date}' data-placement="left" title="#{cell[totalCount].count+__('githubTooltip')}").tooltipUp.proDay5 #{cell[totalCount].count}
                      - } else if (cell[ totalCount ].count == 6) {
                      a(href = '/#{userNickname}/day/#{cell[totalCount].date}' data-placement="left" title="#{cell[totalCount].count+__('githubTooltip')}").tooltipUp.proDay6 #{cell[totalCount].count}
                      - } else if (cell[ totalCount ].count == 7) {
                      a(href = '/#{userNickname}/day/#{cell[totalCount].date}' data-placement="left" title="#{cell[totalCount].count+__('githubTooltip')}").tooltipUp.proDay7 #{cell[totalCount].count}
                      - } else if (cell[ totalCount ].count == 8) {
