block content

  append popup
  append github
  append categorySearch

  - // content 상단
  .frame
    .contents
      .upperWrap
        .ciWrap
          img(src='/img/ci.svg' title="Hello! Himion" alt='CI' onclick="ciClick(this)" data-placement="right").ciIcon.tooltipUp

        audio(src='' ).speech#speech

      .optFrame
        .optWrap
